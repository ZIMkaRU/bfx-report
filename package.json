{
  "name": "bfx-report",
  "version": "0.1.0",
  "description": "Reporting tool",
  "main": "app.js",
  "private": true,
  "dependencies": {
    "async": "^2.5.0",
    "better-npm-run": "^0.1.0",
    "bfx-facs-api": "git+https://github.com/bitfinexcom/bfx-facs-api.git",
    "bfx-facs-base": "git+https://github.com/bitfinexcom/bfx-facs-base.git",
    "bfx-facs-grc": "git+https://github.com/bitfinexcom/bfx-facs-grc.git",
    "bfx-facs-interval": "https://github.com/bitfinexcom/bfx-facs-interval.git",
    "bfx-svc-boot-js": "https://github.com/bitfinexcom/bfx-svc-boot-js.git",
    "bfx-wrk-api": "git+https://github.com/bitfinexcom/bfx-wrk-api.git",
    "bfx-wrk-base": "git+https://github.com/bitfinexcom/bfx-wrk-base.git",
    "bitfinex-api-node": "git+https://github.com/bitfinexcom/bitfinex-api-node.git",
    "body-parser": "^1.18.3",
    "colors": "^1.3.0",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "supports-color": "^5.4.0",
    "winston": "^3.0.0-rc5",
    "yargs": "^6.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-subset": "^1.6.0",
    "eslint": "^4.13.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^4.1.0",
    "nodemon": "^1.17.3",
    "supertest": "^3.0.0"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "test/",
      "node_modules/",
      "logs/",
      "public/",
      ".git/",
      ".idea/",
      ".vscode/"
    ]
  },
  "betterScripts": {
    "start:prod": {
      "command": "node app.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start:dev": {
      "command": "nodemon app.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "test": {
      "command": "mocha --opts .mocha.opts",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "scripts": {
    "start": "better-npm-run start:prod",
    "startDev": "better-npm-run start:dev",
    "startWorker": "node worker.js --env=production --wtype=wrk-report-service-api --apiPort 1337",
    "startWorkerDev": "node worker.js --env=development --wtype=wrk-report-service-api --apiPort 1337",
    "test": "better-npm-run test"
  }
}
